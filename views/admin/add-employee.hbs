<div class="card">
  <div class="card-body">
    <h4 class="card-title">Add Employee</h4>
    <p class="card-description"> Basic Details only </p>
    <form class="forms-sample" action="addemployee" method="POST">
      <div class="form-group">
        <label for="exampleInputUsername1">Employee Name</label>
        <input
          type="text"
          class="form-control"
          name="employeename"
          id="exampleInputUsername1"
          placeholder="Username"
          autocomplete="off"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputMobile">Mobile Number</label>
        <input
          type="number"
          class="form-control"
          name="employeemobile"
          id="exampleInputMobile"
          placeholder="Mobile Number"
          autocomplete="off"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input
          type="email"
          class="form-control"
          name="employeeemail"
          id="exampleInputEmail1"
          placeholder="Email"
          autocomplete="off"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Employee Role</label>

        <select class="form-control" name="employeerole">

          <option>Brach Incharge</option>
          <option>Branch labour</option>
          <option>Accountant</option>
          <option>Admin</option>
        </select>

      </div>

      <div class="form-group">
        <label for="exampleInputassword1">Password</label>
        <input
          type="password"
          class="form-control"
          name="employee_password"
          id="exampleInputPassword1"
          placeholder="Password"
          autocomplete="off"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputConfirmPassword1">Confirm Password</label>
        <input
          type="password"
          class="form-control"
          
          id="exampleInputConfirmPassword1"
          placeholder="Password"
          autocomplete="off"
        />
      </div>

      <button type="submit" class="btn btn-primary mr-2">Submit</button>

    </form>
  </div>
</div>
<script>

  var password = document.getElementById("exampleInputPassword1") ,
  confirm_password = document.getElementById("exampleInputConfirmPassword1");
  function validatePassword(){ 
    if(password.value != confirm_password.value) {
  confirm_password.setCustomValidity("Passwords Don't Match");
   } else {
  confirm_password.setCustomValidity('');
   } } 
   password.onchange =validatePassword;
   confirm_password.onkeyup = validatePassword;
</script>