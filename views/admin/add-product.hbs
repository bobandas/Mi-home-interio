<div class="card">
    <div class="card-body">
        <h2 class="card-title">Add Product</h2>

        <form class="forms-sample" action="addproduct" method="POST">
            <div class="form-group row " style="margin-left: auto;">
                <div class="col-xs-3">
                    <label for="exampleInputUsername1">Item Code</label>
                    <input type="text" class="form-control" name="itemCode" maxlength="5" id="exampleInputUsername1"
                        style="text-transform: uppercase;" placeholder="item code" />
                </div>
                <div class="col-10">
                    <label for="exampleInputProduct">Description</label>
                    <input type="text" class="form-control" name="productDescription" id="exampleInputProduct"
                        style="text-transform: capitalize;" placeholder="Description" />
                </div>

            </div>

            <div class="form-group row">
                <div class="col-8">
                    <label for="exampleInputUsername1">About Product</label>
                    <textarea class="form-control" name="itemCode" id="exampleInputUsername1"
                        style="text-transform: capitalize;" name="message" placeholder="Detailed Description About Product"
                        rows="2"></textarea>

                </div>
                <div class="col-1">
                    <label for="exampleInputProduct">Description</label>

                    <select type="text" class="form-control" name="unit" id="exampleInputProduct"
                        style="text-transform: capitalize;">
                        <option value="PCS">PCS</option>
                        <option value="RM">RM</option>

                    </select>
                </div>
                <div class="col-2">
                    <label for="exampleInputProduct">Rate</label>
                    
                        <input type="number" class="form-control" name="productDescription" id="exampleInputProduct" placeholder="Enter Amount"  min="0" > 
                </div>

            </div>








            <button type="submit" class="btn btn-primary mr-2">Add Product</button>

        </form>
    </div>
</div>