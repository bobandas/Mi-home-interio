<div class="card">
    <div class="card-body">
        <h2 class="card-title">Add Product</h2>

        <form class="forms-sample" action="add-product" method="POST">
            <div class="form-group row " style="margin-left: auto;">
                <div class="col-xs-3">
                    <label for="exampleInputUsername1">Item Code</label>
                    <input type="text" class="form-control" name="itemCode" maxlength="5" id="exampleInputUsername1"
                        style="text-transform: uppercase;" placeholder="item code" />
                </div>
                <div class="col-10">
                    <label for="exampleInputProduct">Description</label>
                    <input type="text" class="form-control" name="productDescription" id="exampleInputProduct"
                        style="text-transform: capitalize;" placeholder="Description" />
                </div>

            </div>

            <div class="form-group row">
                <div class="col-8">
                    <label for="exampleInputUsername1">About Product</label>
                    <textarea class="form-control" name="aboutProduct" id="exampleInputUsername1"
                        style="text-transform: capitalize;" name="message"
                        placeholder="Detailed Description About Product" rows="2"></textarea>

                </div>
                <div class="col-1">
                    <label for="exampleInputProduct">Unit</label>

                    <select type="text" class="form-control" name="unit" id="exampleInputProduct"
                        style="text-transform: capitalize;">
                        <option value="PCS">PCS</option>
                        <option value="RM">RM</option>

                    </select>
                </div>
                <div class="col-2">
                    <label for="exampleInputProduct">Rate</label>

                    <input type="number" class="form-control" name="productRate" id="exampleInputProduct"
                        placeholder="Enter Amount" min="0">
                </div>

            </div>








            <button type="submit" class="btn btn-primary mr-2">Add Product</button>

        </form>
    </div>
</div><br>

<div class="card">
    <div class="card-body">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Item Code</th>
                    <th scope="col">Description</th>
                    <th scope="col">Unit</th>
                    <th scope="col">Rate Dhms</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each productData}}
                <tr>
                    <th scope="row">1</th>
                    <td  style="text-transform: uppercase;">{{this.itemCode}}</td>
                    <td>{{this.productDescription}}</td>
                    <td>{{this.unit}}</td>
                    <td>{{this.productRate}}</td>
                    <td><Button class="btn btn-sm btn-outline-info  btn-icon-text" style="margin-right: 2px;"> Edit</Button><Button
                            class="btn btn-sm btn-outline-danger  btn-icon-text"> Delete</Button></td>
                </tr>
                {{/each}}
                

            </tbody>
        </table>


    </div>
</div>